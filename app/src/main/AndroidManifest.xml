<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weatherapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.example.weatherapp.util.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.weatherapp.activity.ChooseAreaActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.weatherapp.activity.WeatherActivity">
        </activity>
        <activity android:name="com.example.weatherapp.activity.AQIActivity" >
        </activity>
        <service android:name="com.example.weatherapp.service.AutoUpdateService">
        </service>
        <receiver android:name="com.example.weatherapp.receiver.AutoUpdateReceiver">
        </receiver>
    </application>
</manifest>